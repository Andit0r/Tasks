@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;
@inject ShoesMarketDbLibrary.Contexts.ShoesMarketContext Context;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #7FFF00;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Shoes/Index">
                    ShoeShop
                    <img src="/Images/Icon.png" height="50" width="50" />
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Shoes/Index">Список товаров</a>
                        </li>
                        @if (Accessor.HttpContext.Session.GetString("Role") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Orders/Index">Заказы</a>
                            </li>
                        }
                    </ul>
                </div>

                @if (Accessor.HttpContext.Session.GetInt32("UserId") is not null)
                {
                    var userId = Accessor.HttpContext.Session.GetInt32("UserId").Value;
                    var user = Context.Users.FirstOrDefault(u => u.UserId == userId);
                    if (user != null)
                    {
                        @($"{user.SecondName} {user.FirstName} {user.Patronymic}")
                    }
                    <a class="btn btn-primary" asp-page="/Login" asp-route-handler="Logout">Выйти</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-page="/Login">Войти</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
