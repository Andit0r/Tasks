<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Список товаров" Height="600" Width="1050"
        FontFamily="Times New Roman" Background="White" Icon="/Icons/Icon.ico">
    <Window.Resources>
        <local:FinalPriceConverter x:Key="FinalPriceConverter"/>
        <local:DiscountConverter x:Key="DiscountConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Background="#7FFF00">
            <TextBlock Text="Поиск:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchTextBox" Width="150" Margin="5,0"/>
            <TextBlock Text="Бренд:" VerticalAlignment="Center"/>
            <ComboBox x:Name="BrandComboBox" Width="100" Margin="5,0" DisplayMemberPath="Name" SelectedValuePath="BrandId"/>
            <TextBlock Text="Макс. цена:" VerticalAlignment="Center"/>
            <TextBox x:Name="MaxPriceTextBox" Width="80" Margin="5,0"/>
            <TextBlock Text="Сортировка:" VerticalAlignment="Center"/>
            <ComboBox x:Name="SortComboBox" Width="120" Margin="5,0">
                <ComboBoxItem Content="По умолчанию" Tag=""/>
                <ComboBoxItem Content="По названию" Tag="name"/>
                <ComboBoxItem Content="По поставщику" Tag="vendor"/>
                <ComboBoxItem Content="По цене ↑" Tag="price"/>
                <ComboBoxItem Content="По цене ↓" Tag="price_desc"/>
            </ComboBox>
            <CheckBox x:Name="DiscountCheckBox" Content="Со скидкой" Margin="10,0"/>
            <CheckBox x:Name="InStockCheckBox" Content="В наличии" Margin="10,0"/>
            <Button Content="Фильтровать" Click="FilterButton_Click" Margin="10,0" Background="#00FA9A"/>
        </StackPanel>

        <DataGrid x:Name="ShoesDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ShoeId}"/>
                <DataGridTextColumn Header="Фото" Binding="{Binding Photo}"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand.Name}"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Vendor.Name}"/>
                <DataGridTemplateColumn Header="Цена" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="OldPrice" Text="{Binding Price}" Foreground="Red">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Discount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock x:Name="Space" Text=" ">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Discount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Foreground="Black">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource FinalPriceConverter}">
                                            <Binding Path="Price"/>
                                            <Binding Path="Discount"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Размер" Binding="{Binding Size}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Quantity}" Value="0">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Discount, Converter={StaticResource DiscountConverter}}" Value="True">
                            <Setter Property="Background" Value="#2E8B57"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.ItemContainerStyle>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click" Visibility="Collapsed" Margin="5" Background="#00FA9A"/>
            <Button x:Name="EditButton" Content="Редактировать" Click="EditButton_Click" Visibility="Collapsed" Margin="5" Background="#00FA9A"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" Visibility="Collapsed" Margin="5" Background="#00FA9A"/>
        </StackPanel>
    </Grid>
</Window>
