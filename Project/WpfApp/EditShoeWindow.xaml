<Window x:Class="WpfApp.EditShoeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Редактирование товара" Height="600" Width="400" WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman" Background="White" Icon="/Icons/Icon.ico">
    <StackPanel Margin="20">
        <TextBlock Text="Категория:"/>
        <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="Name" SelectedValuePath="CategoryId" IsEditable="False" Margin="0,0,0,10"/>

        <TextBlock Text="Описание:"/>
        <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Артикул:"/>
        <TextBox x:Name="ArticleTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Бренд:"/>
        <ComboBox x:Name="BrandComboBox" DisplayMemberPath="Name" SelectedValuePath="BrandId" IsEditable="False" Margin="0,0,0,10"/>

        <TextBlock Text="Поставщик:"/>
        <ComboBox x:Name="VendorComboBox" DisplayMemberPath="Name" SelectedValuePath="VendorId" IsEditable="False" Margin="0,0,0,10"/>

        <TextBlock Text="Цена:"/>
        <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Скидка (%):"/>
        <TextBox x:Name="DiscountTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Размер:"/>
        <TextBox x:Name="SizeTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Количество:"/>
        <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Фото:"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="PhotoTextBox" Width="200"/>
            <Button Content="Выбрать" Click="SelectPhotoButton_Click"/>
        </StackPanel>

        <TextBlock Text="Пол:"/>
        <ComboBox x:Name="GenderComboBox" Margin="0,0,0,10" SelectedValuePath="Content">
            <ComboBoxItem Content="Male"></ComboBoxItem>
            <ComboBoxItem Content="Female"></ComboBoxItem>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5" Background="#00FA9A"/>
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5" Background="#00FA9A"/>
        </StackPanel>
    </StackPanel>
</Window>