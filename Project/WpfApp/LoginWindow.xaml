<Window x:Class="WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Вход" Height="250" Width="300" WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman" Background="White" Icon="/Icons/Icon.ico">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Логин:" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginTextBox" Width="200" Margin="0,0,0,10"/>
        <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,20"/>
        <Button Content="Войти" Click="LoginButton_Click" Width="100" Background="#00FA9A"/>
    </StackPanel>
</Window>